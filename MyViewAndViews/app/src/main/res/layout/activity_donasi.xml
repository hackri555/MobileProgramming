<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DonasiActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/activity_vertical_layout"
            android:text="Nama Anda:"
            />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Masukkan nama"
            android:inputType="textEmailAddress"
            android:layout_marginBottom="@dimen/activity_vertical_layout"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/activity_vertical_layout"
            android:text="E-mail Anda:"
            />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Masukkan alamat e-mail"
            android:inputType="textEmailAddress"
            android:layout_marginBottom="@dimen/activity_vertical_layout"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/activity_vertical_layout"
            android:text="Jumlah Donasi:"
            />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Masukkan nominal donasi"
            android:inputType="number"
            android:layout_marginBottom="@dimen/activity_vertical_layout"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/activity_vertical_layout"
            android:text="Catatan:"
            />
        <EditText
            android:layout_width="fill_parent"
            android:layout_height="100dp"
            android:hint="Tambahkan catatan"
            android:inputType="textMultiLine"
            android:layout_marginBottom="@dimen/activity_vertical_layout"
            />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Pembayaran"
            />
    </LinearLayout>



</ScrollView>